#!/usr/bin/env node

const mkdirp = require('../');
const minimist = require('minimist');
const fs = require('fs');

const argv = minimist(process.argv.slice(2), {
    alias: { m: 'mode', h: 'help' },
    string: ['mode']
});

if (argv.help) {
    fs.createReadStream(__dirname + '/usage.txt').pipe(process.stdout);
    return;
}

const paths = argv._.slice();
const mode = argv.mode ? parseInt(argv.mode, 8) : undefined;

(function createDirectories() {
    if (paths.length === 0) return;
    const p = paths.shift();

    if (mode === undefined) {
        mkdirp(p, callback);
    } else {
        mkdirp(p, mode, callback);
    }

    function callback(err) {
        if (err) {
            console.error(err.message);
            process.exit(1);
        } else {
            createDirectories();
        }
    }
})();
